
public class ExeFuncionario {

	public static void main(String[] args) {
		Funcionario nico = new Funcionario();
		nico.setCpf("697.780.495-62");
		nico.setNome("Fulano de Beutrano");
		nico.setSalario(3.500);
		System.out.println(nico.getNome());
		System.out.println(nico.getCpf());
		System.out.println(nico.getBonificacao());

		Gerente jose = new Gerente();

		jose.setNome("José Ferreira");
		jose.setCpf("98789874898");
		jose.setSalario(5000);
		jose.setSalario(15000);

		System.out.println(jose.getNome());
		System.out.println(jose.getCpf());
		System.out.println(jose.getSalario());
		jose.setSenha(22);
		boolean autenticaSenha = jose.autentica(222);

		System.out.println(autenticaSenha);

		System.out.println("salario com bonus"+jose.getBonificacao());
		
		Funcionario mane = new Gerente();
		mane.setNome("Manoel");
		String nome = mane.getNome();
		mane.setSalario(1500);
		
		Funcionario tico = new Funcionario();
		tico.setNome("Tiquinho");
		tico.setSalario(1350.0);

	ControleBonus controle = new ControleBonus();
	controle.registra(jose);
	controle.registra(mane);
	controle.registra(tico);
	
	

	
	System.out.println("bonificação "+controle.getSoma());

	}

}
